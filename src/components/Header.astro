---
import { useTranslations } from '../i18n/ui';

import { getPath } from '../utils/navigation';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<nav class="container mx-auto px-4 py-6 flex items-center justify-between relative z-10">
    <div class="flex items-center gap-4">
        <a href={getPath('/')} class="flex items-center gap-2 group">
            <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-red-600 to-red-800 flex items-center justify-center text-white font-bold text-xl shadow-lg group-hover:scale-105 transition-transform">
                <img src={getPath("logo.svg")} alt="App Logo" class="w-full h-full object-cover rounded-xl" />
            </div>
            <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-700">{t("nav.home")}</span>
        </a>
    </div>
    <div class="hidden md:flex gap-6 text-sm font-medium text-gray-600">
        <a href={getPath(`${lang}/support`)} class="hover:text-blue-600 transition-colors">{t("nav.support")}</a>
        <a href={getPath(`${lang}/terms-of-service`)} class="hover:text-blue-600 transition-colors">{t("nav.tos")}</a>
        <a href={getPath(`${lang}/datenschutz`)} class="hover:text-blue-600 transition-colors">{t("nav.privacy")}</a>
        <a href={getPath(`${lang}/subscription-terms`)} class="hover:text-blue-600 transition-colors">{t("nav.subscription")}</a>
    </div>
</nav>
