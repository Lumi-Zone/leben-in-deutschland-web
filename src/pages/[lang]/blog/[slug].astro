---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { useTranslations } from '../../../i18n/ui';

export async function getStaticPaths() {
  const supportedLangs = ['de', 'en', 'tr', 'ar', 'ua', 'ru', 'pl', 'fa', 'ps', 'ro', 'it', 'es'];
  const posts = await getCollection('blog');
  
  // Generate a route for every language and every post
  return supportedLangs.flatMap(lang => 
    posts.map(post => ({
      params: { lang, slug: post.slug },
      props: { post, lang },
    }))
  );
}

import { getPath } from '../../../utils/navigation';
import Header from '../../../components/Header.astro';
// ... imports

const { post, lang } = Astro.props;
const t = useTranslations(lang as any);
const { Content } = await post.render();
---

<Layout title={`${post.data.title} - Leben in Deutschland`} lang={lang}>
	<!-- Navigation -->
	<Header lang={lang} />

  <article class="min-h-screen bg-white">
    {/* Header */}
    <div class="bg-gray-50 border-b border-gray-100 py-16">
        <div class="container mx-auto px-4 max-w-3xl text-center">
            <div class="flex items-center justify-center gap-2 text-sm text-gray-500 mb-6">
                <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full font-medium text-xs">{post.data.tags?.[0]}</span>
                <span>â€¢</span>
                <time>{post.data.pubDate.toLocaleDateString(lang)}</time>
            </div>
            <h1 class="text-3xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">{post.data.title}</h1>
            <p class="text-xl text-gray-600 leading-relaxed">{post.data.description}</p>
        </div>
    </div>

    {/* Content */}
    <div class="container mx-auto px-4 max-w-3xl py-12">
        <div class="prose prose-lg prose-blue mx-auto prose-headings:font-bold prose-headings:text-gray-900 prose-p:text-gray-600 prose-li:text-gray-600">
            <Content />
        </div>

        {/* Share/Footer */}
        <div class="mt-16 pt-8 border-t border-gray-100 flex justify-between items-center">
            <a href={getPath(`${lang}/blog`)} class="text-gray-500 hover:text-gray-900 font-medium inline-flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" /></svg>
                {t('blog.back')}
            </a>
        </div>
    </div>
  </article>
</Layout>
