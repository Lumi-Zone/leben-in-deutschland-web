---
import Layout from '../layouts/Layout.astro';
import questions from '../data/questions.json';
---

<Layout title="Leben in Deutschland Test">
	<main class="container mx-auto px-4 py-12">
		<h1 class="text-4xl font-bold text-center mb-8">Leben in Deutschland</h1>
		<p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
			Prepare for your citizenship test with our comprehensive question bank.
		</p>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{questions.map((q) => (
				<a href={`/frage/${q.id}`} class="block group">
					<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
						<div class="flex items-center justify-between mb-2">
							<span class="text-sm font-medium text-blue-600">Question {q.id}</span>
							<span class="text-xs text-gray-400">{q.stats.wrong_percentage}% fail rate</span>
						</div>
						<h2 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
							{q.question_de}
						</h2>
					</div>
				</a>
			))}
		</div>
	</main>
</Layout>
