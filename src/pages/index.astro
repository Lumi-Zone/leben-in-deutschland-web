			<!-- Phone Mockup Placeholder -->
			<div class="relative max-w-4xl mx-auto mb-32">
				<div class="absolute inset-0 bg-gradient-to-t from-[#FFFBF4] to-transparent z-10 h-32 bottom-0 w-full"></div>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-end px-4">
					<div class="hidden md:block transform translate-y-12 opacity-80">
						<div class="bg-gray-900 rounded-[2rem] p-3 aspect-[9/19] shadow-2xl border-4 border-gray-800 bg-opacity-90 backdrop-blur">
							<!-- Screen Content Placeholder -->
							<div class="bg-purple-100 w-full h-full rounded-[1.5rem] flex items-center justify-center overflow-hidden">
